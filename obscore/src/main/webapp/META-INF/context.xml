<?xml version='1.0' encoding='utf-8'?>
<Context>
    <WatchedResource>WEB-INF/web.xml</WatchedResource>

    <!--
      The following was included at the end of the initSQL clause below:
      NLS_SORT=BINARY_CI NLS_COMP=LINGUISTIC

      It was removed as it affects the row counts of the ObsCore view.  This is here as an audit
      if that in case it causes issues later on.
      jenkinsd 2020.11.12
    -->
       
    <Resource name="jdbc/tapuser"
              auth="Container"
              type="javax.sql.DataSource"
              factory="org.apache.tomcat.jdbc.pool.DataSourceFactory"
              minEvictableIdleTimeMillis="30000"
              maxActive="4" maxIdle="4" maxWait="20000"
              username="${alma.tapuser.username}" password="${alma.tapuser.password}"
              driverClassName="${alma.tapuser.driverClassName}"
              url="${alma.tapuser.url}"
              removeAbandoned="false"
              removeAbandonedTimeout="600"
              initSQL="ALTER SESSION SET NLS_TIMESTAMP_FORMAT='YYYY-MM-DD&quot;T&quot;HH24:MI:SS.FF3&quot;Z&quot;' NLS_DATE_FORMAT='YYYY-MM-DD&quot;T&quot;HH24:MI:SS&quot;Z&quot;'"
              logAbandoned="true"
              testOnBorrow="true"
              validationQuery="SELECT 1 FROM DUAL"
    />
    
</Context>
